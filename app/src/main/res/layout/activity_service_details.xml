<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffbb0"
    android:padding="15dp"
    tools:context=".ServiceDetails">

    <TextView
        android:id="@+id/textPaymentHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Please choose from the list of available technicians"
        android:layout_centerHorizontal="true"
        android:textColor="@color/design_default_color_primary"
        android:textSize="20sp"
        android:fontFamily="sans-serif-black"/>

    <RadioGroup
        android:layout_marginTop="30dp"
        android:id="@+id/groupradio"
        android:layout_below="@+id/textPaymentHeader"
        android:layout_marginLeft="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp">

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radio_id1"
            android:text="Choice 1"
            android:textSize="20sp"/>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radio_id2"
            android:text="Choice 2"
            android:textSize="20sp"/>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radio_id3"
            android:text="Choice 3"
            android:textSize="20sp"/>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radio_id4"
            android:text="Choice 4"
            android:textSize="20sp"/>

        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radio_id5"
            android:text="Choice 5"
            android:textSize="20sp"/>

    </RadioGroup>

    <TextView
        android:id="@+id/textPaymentAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupradio"
        android:layout_marginTop="70dp"
        android:text="@string/booking_time"
        android:layout_centerHorizontal="true"
        android:textColor="@color/design_default_color_primary"
        android:textSize="20sp"
        android:fontFamily="sans-serif-black"/>

    <Button
        android:id="@+id/btnPick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/textPaymentAmount"
        android:text="@string/pick_date_and_time"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/btnPick"
        android:visibility="gone" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:onClick="openBookSuccessActivity"
        android:text="Confirm Booking" />

</RelativeLayout>